# Autonomy + BYOC Orchestrator Configuration Template
# Copy this to autonomy/.env and update values as needed
# 
# This template is for running the FULL VTuber system with BYOC orchestrator
# For external orchestrators only, use .env.orchestrator-template instead

# ===========================================
# VTUBER CORE (Keep existing values)
# ===========================================
OPENAI_API_KEY=your-openai-key-here
ELEVENLABS_API_KEY=your-elevenlabs-key-here
LLM_PROVIDER=ollama
OLLAMA_MODEL=llama3.2:3b

# ===========================================
# LIVEPEER BYOC ORCHESTRATOR (From pipeline config)
# ===========================================
# Manager Connection (REQUIRED for orchestrator registration)
MANAGER_URL=http://86.106.138.188:8010/api
MANAGER_API_KEY=test-api-key-2024              # Test API key for development
ORCHESTRATOR_ID=main-orchestrator-001
ORCHESTRATOR_NAME=vtuber-autonomy-main
ORCHESTRATOR_SECRET=super-secret-orchestrator-key-32-chars-min

# Orchestrator Configuration (from docker-compose.yml orchestrator service)
LIVEPEER_IMAGE_TAG=latest
LIVEPEER_ORCH_URL=https://livepeer-orchestrator:9995
LIVEPEER_ORCH_SECRET=orch-secret

# Network
LIVEPEER_NETWORK=arbitrum-one-mainnet
ETH_RPC_URL=https://arb1.arbitrum.io/rpc
ETH_PASSWORD=
ETH_ORCH_ADDRESS=

# Pricing (Testing Phase - All set to 0)
PRICE_PER_UNIT=0                    # Testing phase - free
TICKET_EV=0                          # Testing phase - free
MAX_FACE_VALUE=0                     # Testing phase - free
AUTO_ADJUST_PRICE=false
MAX_GAS_PRICE=1000000000

# Worker Capability (from worker service)
CAPABILITY_NAME=agent-net
CAPABILITY_DESCRIPTION=Agent network capability with connectivity monitoring
CAPABILITY_URL=http://worker:9876
CAPABILITY_PRICE_PER_UNIT=0         # IMPORTANT: Keep at 0 for testing
CAPABILITY_PRICE_SCALING=1
CAPABILITY_CAPACITY=10