# 24/7 Autonomous Trading System - Environment Configuration
# Copy this file to .env and update with your actual values

# Environment
ENVIRONMENT=production

# Security Configuration
JWT_SECRET=CHANGE-ME-TO-SECURE-32-CHAR-STRING
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
ADMIN_PASSWORD=CHANGE-ME-TO-SECURE-PASSWORD

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_POOL_SIZE=10

# API Keys - Required for market data
FINNHUB_API_KEY=your-finnhub-api-key-here
TWELVEDATA_API_KEY=your-twelvedata-api-key-here
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key-here

# Trading Configuration
INITIAL_CAPITAL=1000.00
MAX_POSITION_PCT=0.10
STOP_LOSS_PCT=0.02
COMMISSION_PCT=0.001
TARGET_SYMBOLS=AAPL,MSFT,GOOGL,TSLA,NVDA,BTC-USD,ETH-USD

# Strategy Configuration
ENABLE_MEAN_REVERSION=true
ENABLE_MOMENTUM=true
ENABLE_ARBITRAGE=true
ENABLE_SCALPING=false
ENABLE_DCA=true

# Risk Management
DAILY_LOSS_LIMIT=0.05
MAX_DAILY_TRADES=50
CONFIDENCE_THRESHOLD=0.6

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Performance Tuning
UPDATE_FREQUENCY=30
REBALANCE_FREQUENCY=3600