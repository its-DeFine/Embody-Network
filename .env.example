# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# RabbitMQ Configuration
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=password-change-in-production
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis-password-change-in-production

# PostgreSQL Configuration
POSTGRES_USER=autogen_user
POSTGRES_PASSWORD=postgres-password-change-in-production
POSTGRES_DB=autogen_agents
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Admin Configuration
ADMIN_API_KEY=admin-secret-key-change-in-production

# LLM Configuration (Choose one or more)
# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4

# Anthropic
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-2

# Exchange API Keys (for real trading)
# Binance
BINANCE_API_KEY=your-binance-api-key
BINANCE_API_SECRET=your-binance-api-secret
BINANCE_TESTNET=true

# Coinbase
COINBASE_API_KEY=your-coinbase-api-key
COINBASE_API_SECRET=your-coinbase-api-secret

# Kraken
KRAKEN_API_KEY=your-kraken-api-key
KRAKEN_API_SECRET=your-kraken-api-secret

# Market Data Providers
COINGECKO_API_KEY=your-coingecko-api-key-optional

# GitHub Token for Update Pipeline
GITHUB_TOKEN=your_github_token

# Grafana Monitoring
GRAFANA_PASSWORD=admin-password-change-in-production

# Feature Flags
ENABLE_TRADING=false
ENABLE_TESTNET=true
ENABLE_PAPER_TRADING=true

# Trading Mode Configuration
TRADING_MODE=comparison              # Options: real, simulated, hybrid, comparison, shadow
COMPARISON_MODE=true                 # Run real and simulated in parallel
COMPARISON_SYNC_PRICES=true          # Use real prices in simulation

# Hybrid Mode Settings
HYBRID_REAL_WEIGHT=0.1              # 10% real money
HYBRID_SIM_WEIGHT=0.9               # 90% simulated
HYBRID_REBALANCE_DAILY=true         # Rebalance weights daily

# Simulation Configuration
SIMULATION_INITIAL_BALANCE=10000     # Starting balance for simulation
SIMULATION_VOLATILITY=1.0            # Volatility multiplier (1.0 = realistic)
SIMULATION_SLIPPAGE_BPS=10           # Slippage in basis points
SIMULATION_FEES=0.001                # Trading fee rate (0.1%)
SIMULATION_LATENCY_MS=50             # Network latency simulation
SIMULATION_LIQUIDITY_FACTOR=1.0      # Liquidity multiplier

# Advanced Simulation Features
SIMULATION_BLACK_SWAN=true           # Enable rare market events (0.1% chance)
SIMULATION_MARKET_IMPACT=true        # Simulate market impact of large orders
SIMULATION_ORDER_BOOK_SIM=true       # Simulate realistic order book depth
SIMULATION_PARTIAL_FILLS=true        # Enable partial order fills

# Market Condition Simulation
SIMULATION_MARKET_CONDITIONS=true    # Dynamic market conditions
SIMULATION_FLASH_CRASH_PROB=0.001    # Probability of flash crash
SIMULATION_LIQUIDITY_CRISIS=true     # Simulate liquidity dry-ups

# Comparison Analytics
COMPARISON_TRACK_DIVERGENCE=true     # Track real vs sim divergence
COMPARISON_ALERT_THRESHOLD=0.05      # Alert if divergence > 5%
COMPARISON_REPORT_INTERVAL=3600      # Report interval in seconds