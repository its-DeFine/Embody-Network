# Production Environment Configuration
# Copy this file to .env and update with your actual values

# Environment
ENVIRONMENT=production

# Security
JWT_SECRET=your-super-secure-jwt-secret-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
ADMIN_PASSWORD=your-secure-admin-password-change-this

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_POOL_SIZE=20

# Database Configuration (if using external database)
DATABASE_URL=postgresql://user:password@postgres:5432/trading_db

# API Keys - Replace with your actual keys
OPENAI_API_KEY=your-openai-api-key
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key
FINNHUB_API_KEY=your-finnhub-key
TWELVEDATA_API_KEY=your-twelvedata-key
MARKETSTACK_API_KEY=your-marketstack-key
POLYGON_API_KEY=your-polygon-key

# Trading Configuration
INITIAL_CAPITAL=1000.00
MAX_POSITION_PCT=0.10
STOP_LOSS_PCT=0.02
COMMISSION_PCT=0.001
TARGET_SYMBOLS=AAPL,MSFT,GOOGL,TSLA,NVDA,META,AMZN

# Risk Management
MAX_DAILY_LOSS_PCT=0.05
MAX_PORTFOLIO_RISK=0.20
MIN_CASH_RESERVE=100.00

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Docker Configuration
DOCKER_NETWORK=autogen-network
AGENT_IMAGE=autogen-agent:production
AGENT_MEMORY_LIMIT=2g
AGENT_CPU_LIMIT=2.0

# OpenBB Configuration
OPENBB_URL=http://openbb:8080
OPENBB_API_KEY=your-openbb-key

# Email Alerts (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ALERT_EMAIL=alerts@yourdomain.com

# Slack Alerts (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/your-webhook-url

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket