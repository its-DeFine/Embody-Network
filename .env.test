# Test Environment Configuration for AutoGen Platform

# Environment
ENVIRONMENT=test
LOG_LEVEL=DEBUG

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=2

# Authentication
JWT_SECRET=test-secret-key-not-for-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# Test User Credentials
TEST_USER_EMAIL=test@example.com
TEST_USER_API_KEY=test-api-key
TEST_ADMIN_EMAIL=admin@example.com
TEST_ADMIN_API_KEY=admin-test-key

# Database (if using in future)
DATABASE_URL=postgresql://test:test@test-postgres:5432/autogen_test

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=
REDIS_DB=1  # Use separate DB for tests

# RabbitMQ Configuration
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672/
RABBITMQ_EXCHANGE=autogen_test_events
RABBITMQ_HEARTBEAT=30

# Service URLs
CORE_ENGINE_URL=http://core-engine:8001
AGENT_MANAGER_URL=http://agent-manager:8002
UPDATE_PIPELINE_URL=http://update-pipeline:8003

# Trading Configuration
TRADING_MODE=simulated
ENABLE_REAL_TRADING=false
MAX_ORDER_SIZE=1000
DEFAULT_RISK_LIMIT=0.02

# Mock Exchange Configuration
MOCK_EXCHANGE_URL=http://mock-exchange:1080
USE_MOCK_EXCHANGE=true

# Agent Configuration
MAX_AGENTS_PER_CUSTOMER=5
AGENT_TIMEOUT_SECONDS=300
AGENT_HEARTBEAT_INTERVAL=30

# GPU Configuration
ENABLE_GPU_DEPLOYMENT=false
GPU_ADAPTER_URL=http://orchestrator-adapter:8002

# Security
ENABLE_RATE_LIMITING=false
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001", "http://control-board"]
ALLOWED_HOSTS=["localhost", "127.0.0.1", "api-gateway", "control-board"]

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_TRACING=false

# Test-specific settings
ENABLE_TEST_ENDPOINTS=true
DISABLE_AUTH_FOR_TESTS=false
TEST_DATA_SEED=42
CLEANUP_TEST_DATA=true

# Performance limits for tests
MAX_CONCURRENT_TESTS=10
TEST_TIMEOUT_SECONDS=60

# External Service Mocks
BINANCE_API_URL=http://mock-exchange:1080/binance
BINANCE_TESTNET=true
COINBASE_API_URL=http://mock-exchange:1080/coinbase

# Feature Flags
ENABLE_WEBSOCKETS=true
ENABLE_AGENT_TEAMS=true
ENABLE_ADVANCED_ANALYTICS=false

# Docker Configuration
DOCKER_NETWORK=autogen-network
DOCKER_REGISTRY=localhost:5000

# Logging
LOG_FORMAT=json
LOG_TO_FILE=false
LOG_FILE_PATH=/logs/test.log

# Slack Integration (for test notifications)
SLACK_WEBHOOK_URL=
ENABLE_SLACK_NOTIFICATIONS=false

# Test Coverage
COVERAGE_THRESHOLD=80
FAIL_UNDER_COVERAGE=false